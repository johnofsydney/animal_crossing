<div id="<%= dom_id animal %>" class="card">
  <%= link_to image_tag(animal.photos.first.address, class: "card-img-top"), animal %>
  <div class="card-body">
    <h5 class="card-title"><%= animal.name %></h5>
    <p class="card-text"><%= animal.summary %></p>
    <%= link_to animal.name, animal, class: "btn btn-primary" %>
  </div>
</div>
